#!/usr/bin/env bash
set -e
cd "$(dirname "$0")/.."
# shellcheck disable=SC1091
source "s/_tools.sh"

echo_info "Cleaning..."
s/clean

find src -type f -name '*.test.*' | while read -r TEST_SRC; do
    jo src="/$TEST_SRC"
done | jo -a > test-manifest.json

find demos -type f -name '*.html' | while read -r DEMO_SRC; do
    jo src="/$DEMO_SRC"
done | jo -a > demos-manifest.json

s/server
